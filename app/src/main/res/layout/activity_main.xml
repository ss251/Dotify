<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <ViewSwitcher
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_avenger"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/changeUser"
        app:layout_constraintBottom_toBottomOf="@id/changeUser"
        />

    <EditText
        android:id="@+id/userNameEdit"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/changeUser"
        app:layout_constraintBottom_toBottomOf="@id/changeUser"
        android:hint="Enter new username"/>
    </ViewSwitcher>

    <Button
        android:id="@+id/changeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickChangeUser"
        android:text="@string/change_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/albumArt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/strangers_cover_art"
        app:layout_constraintRight_toRightOf="@id/changeUser"
        app:layout_constraintLeft_toLeftOf="@+id/viewSwitcher"
        app:layout_constraintTop_toBottomOf="@id/changeUser"
        android:contentDescription="@string/album_art_seven_lions"
        app:layout_constraintDimensionRatio="1:1"
        />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strangers"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/albumArt"
        app:layout_constraintLeft_toLeftOf="@id/albumArt"
        app:layout_constraintRight_toRightOf="@id/albumArt"
        />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_name_seven_lions"
        app:layout_constraintTop_toBottomOf="@id/songName"
        app:layout_constraintLeft_toLeftOf="@id/albumArt"
        app:layout_constraintRight_toRightOf="@id/albumArt"
        android:textSize="19sp"
        android:ellipsize="end"
        android:maxLines="1"
    />

    <TextView
        android:id="@+id/noPlays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:text="@string/_1000_plays"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/plays"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/plays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintLeft_toRightOf="@id/noPlays"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="25dp"
        android:text="@string/plays"
        />

    <ImageView
        android:id="@+id/previousButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:onClick="clickPrevious"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_previous"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/playButton"
        app:layout_constraintTop_toTopOf="@id/playButton"
        android:contentDescription="previousButton"/>

    <ImageView
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:onClick="clickPlay"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_play"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toRightOf="@id/previousButton"
        app:layout_constraintRight_toLeftOf="@id/nextButton"
        app:layout_constraintTop_toBottomOf="@id/noPlays"
        android:contentDescription="playButton"/>

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:onClick="clickNext"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_next"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/playButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/playButton"
        android:contentDescription="nextButton"/>



</androidx.constraintlayout.widget.ConstraintLayout>