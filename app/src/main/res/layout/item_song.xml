<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:id="@+id/itemSong"
    android:padding="10sp">

    <ImageView
        android:id="@+id/ivSongPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/strangers_cover_art"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/albumart_img_view"
        />

    <TextView
        android:id="@+id/tvSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tvSongArtist"
        app:layout_constraintLeft_toRightOf="@id/ivSongPic"
        app:layout_constraintTop_toTopOf="@id/ivSongPic"
        tools:text="Song Title" />

    <TextView
        android:id="@+id/tvSongArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/ivSongPic"
        app:layout_constraintLeft_toRightOf="@id/ivSongPic"
        app:layout_constraintTop_toBottomOf="@id/tvSongTitle"
        tools:text="Artist" />

</androidx.constraintlayout.widget.ConstraintLayout>